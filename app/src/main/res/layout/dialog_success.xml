<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"

    android:background="@drawable/shape_confirm_bg"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_headerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/title_Confirm"
        android:visibility="gone"
        android:textColor="@color/title_black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_headerSubTitle"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:textAlignment="viewStart"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="@string/title_dialog_confirm_subtitle"
        android:textColor="@color/title_black"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/actionsContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"

        android:layout_marginTop="25dp"
        android:layout_weight="1"
        android:gravity="center|end">




        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnAcceptRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="25dp"
            android:background="@null"
            android:src="@drawable/ic_yes_dilaog"

            app:layout_constraintBottom_toBottomOf="@+id/cimg_requests_userImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cimg_requests_userImage" />
    </LinearLayout>


</LinearLayout>