    <style name="My_Widget.MaterialComponents.Chip.Choice" parent="Base.Widget.MaterialComponents.Chip">
        <item name="android:checkable">true</item>
        <item name="checkedIconEnabled">false</item>
        <item name="checkedIcon">@null</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="textStartPadding">9dp</item>
        <item name="textEndPadding">9dp</item>
        <item name="closeIconVisible">false</item>
        <item name="android:textSize">6sp</item>
        <item name="chipBackgroundColor">@color/tag_selector_color</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="My_Chip" parent="Base.Widget.MaterialComponents.Chip">
        <item name="android:checkable">true</item>
        <item name="checkedIconEnabled">false</item>
        <item name="checkedIcon">@null</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="textStartPadding">9dp</item>
        <item name="textEndPadding">9dp</item>
        <item name="closeIconVisible">false</item>
        <item name="android:textSize">6sp</item>
        <item name="chipBackgroundColor">@color/primary_color</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Small_Chip_For_Community" parent="Base.Widget.MaterialComponents.Chip">
        <item name="android:checkable">false</item>
        <item name="checkedIconEnabled">false</item>

        <item name="checkedIcon">@null</item>

        <item name="rippleColor">@null</item>
        <item name="closeIcon">@null</item>
        <!--        <item name="android:textSize">4sp</item>-->
        <item name="chipBackgroundColor">@color/primary_color</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="colorAccent">@color/primary_color</item>
        <item name="colorPrimary">@color/primary_color</item>
    </style>

    <style name="AppModalStyle" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:background">@drawable/bg_white_corner_top_r6</item>
    </style>


    <style name="Myslider" parent="@style/Widget.MaterialComponents.Slider">
        <item name="labelStyle">@style/My_Tooltip</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.Slider</item>
    </style>

    <style name="My_Tooltip" parent="Widget.MaterialComponents.Tooltip">
        <!-- background color of the Tooltip -->
        <item name="backgroundTint">@color/primary_color</item>
    </style>

    <style name="ThemeOverlay.Slider" parent="">
        <!-- color used by the text in the Tooltip -->
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="MyTabLayoutTextStyle">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/tab_text_color_selector</item>
    </style>
</resources>