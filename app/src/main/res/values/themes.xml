<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FriendzrAndroid" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">


        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color</item>
        <item name="colorOnPrimary">@color/unselected_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/unselected_black</item>
        <!--        <item name="colorSecondaryVariant">@color/teal_700</item>-->
        <item name="colorOnSecondary">@color/unselected_black</item>
        <item name="android:windowTranslucentStatus">true</item>

        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <!-- Status bar color. -->
        <!--    Customize your theme here. -->
        <item name="android:statusBarColor">@color/unselected_black</item>

        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>


        <item name="android:layoutDirection">ltr</item>


    </style>


    <style name="NoActionBar" parent="Theme.FriendzrAndroid">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="bottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">8sp</item>

    </style>


    <style name="BottomNavigationText" parent="@android:style/TextAppearance" />

    <style name="BottomNavigationText.Selected">
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="moreTextViewStyle" parent="Theme.FriendzrAndroid">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/title_black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:lines">1</item>

        <item name="android:layout_height">50dp</item>


    </style>

    <style name="linkedAccountsTextViewStyle" parent="Theme.FriendzrAndroid">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">#141414</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
        <item name="android:layout_marginTop">23dp</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginEnd">25dp</item>


    </style>


    <style name="profileTitleStyle" parent="Theme.FriendzrAndroid">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lines">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/profileGray</item>


    </style>

    <style name="eventTextStyle" parent="Theme.FriendzrAndroid">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lines">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="intro4_gl_tv" parent="Theme.FriendzrAndroid">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:layout_marginEnd">3dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">12sp</item>

    </style>


    <style name="Widget.App.RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="buttonTint">@color/radio_button_select_color</item>
    </style>

    <style name="Theme.FriendzrAndroid.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FriendzrAndroid.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FriendzrAndroid.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


